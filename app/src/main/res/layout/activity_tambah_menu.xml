<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".TambahMenu">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggalPesan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal pesan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomorMeja1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor meja"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jamPesan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam pesan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Daftar makanan yang dipesan:"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/listItemMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTambahItem"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text="Tambah Menu"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnSimpanPesanan"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text="Simpan pesanan"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>